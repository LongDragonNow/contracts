{
  "name": "@nonceblox/ld-staking-contracts",
  "description": "",
  "version": "1.0.0",
  "author": {
    "name": "nonceblox",
    "url": "https://github.com/nonceblox/ld-staking-contracts"
  },
  "scripts": {
    "clean": "rimraf ./artifacts ./cache ./coverage ./types ./coverage.json && npm run typechain",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" && npm run typechain",
    "deploy:contracts": "hardhat deploy",
    "lint": "npm run lint:sol && npm run lint:ts && npm run prettier:check",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --ignore-path ./.eslintignore --ext .js,.ts .",
    "postcompile": "npm run typechain",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "doc": "npm hardhat dodoc",
    "task:deployLock": "hardhat task:deployLock",
    "task:deploy-ld": "npx hardhat run deploy/deployLdToken.ts --network sepolia",
    "task:deploy-staking": "npx hardhat run deploy/deployStaking.ts --network sepolia",
    "task:deploy-pool": "npx hardhat run deploy/deployRewardPool.ts --network sepolia",
    "task:stake": "npx hardhat stake --network sepolia",
    "task:change-apr": "npx hardhat change-apr --network sepolia",
    "task:change-treasury": "npx hardhat change-treasury --network sepolia",
    "task:disable-claims": "npx hardhat disable-claims --network sepolia",
    "task:disable-staking": "npx hardhat disable-staking --network sepolia",
    "task:enable-staking": "npx hardhat enable-staking --network sepolia",
    "task:fund-pool": "npx hardhat fund-pool --network sepolia",
    "task:mint-ld": "npx hardhat mint-ld --network sepolia",
    "task:set-pool": "npx hardhat set-pool --network sepolia",
    "test": "hardhat test",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "prepare": "husky"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "upgrade": "^1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.2",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "chai": "^4.3.10",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-sznm": "^2.0.2",
    "ethers": "^6.9.0",
    "fs-extra": "^11.2.0",
    "hardhat": "^2.19.2",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "2.0.2",
    "husky": "^9.0.11",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.2.0",
    "rimraf": "^5.0.5",
    "solhint": "^4.5.2",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "files": [
    "contracts"
  ],
  "keywords": [
    "blockchain",
    "ethers",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity",
    "template",
    "typescript",
    "typechain"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/nonceblox/ld-staking-contracts/issues"
  },
  "homepage": "https://github.com/nonceblox/ld-staking-contracts#readme"
}
